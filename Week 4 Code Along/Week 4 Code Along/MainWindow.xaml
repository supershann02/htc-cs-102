<Window x:Class="Week_4_Code_Along.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week_4_Code_Along"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Teal">
    
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBlock FontSize="20">Title</TextBlock>
            <TextBox Name="titleInput" Margin="0,0,0,15" Height="50"></TextBox>
            <TextBlock FontSize="20">Release Year</TextBlock>
            <TextBox Name="releaseYearInput" Margin="0,0,0,15" Height="50"></TextBox>
            <Button HorizontalAlignment="Center" Margin="0,0,0,15" Click="AddButton_Click">Add</Button>
            <Button HorizontalAlignment="Center" Click="ShowButton_Click">Show All Movies</Button>
        </StackPanel>
    </Grid>
</Window>
